<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/fragment_mypage"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MypageFragment">



    <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MypageActivity" tools:layout_editor_absoluteX="-56dp" tools:layout_editor_absoluteY="75dp">

        <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

            <ImageView
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:scaleType="center"
                    android:src="@drawable/profile"/>

            <TextView
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/profile"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="ID:000000"
                    android:textSize="12sp"/>

            <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/id"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="YURI"
                    android:textSize="25sp"/>

            <TextView
                    android:id="@+id/height"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/sl"
                    android:text="164cm"
                    android:textSize="12sp"/>
            <TextView
                    android:id="@+id/sl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:text="/"
                    android:textSize="12sp"/>

            <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/name"
                    android:layout_toRightOf="@+id/sl"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="WOMEN"
                    android:textSize="12sp"/>

            <ImageButton
                    android:id="@+id/set_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="#00000000"
                    android:src="@drawable/seticon"/>

            <ImageView
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sl"
                    android:layout_marginTop="20dp"
                    android:scaleType="center"
                    android:src="@drawable/line"/>



            <ImageButton
                    android:id="@+id/cloth_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="35dp"
                    android:background="#00000000"
                    android:src="@drawable/clothb"/>

            <ImageButton
                    android:id="@+id/hair_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/cloth_before"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/cloth_before"
                    android:background="#00000000"
                    android:src="@drawable/hairb"/>

            <ImageButton
                    android:id="@+id/make_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/hair_before"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/hair_before"
                    android:background="#00000000"
                    android:src="@drawable/makeb"/>

            <ImageButton
                    android:id="@+id/aroma_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/make_before"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/make_before"
                    android:background="#00000000"
                    android:src="@drawable/aromab"/>

            <ImageView
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cloth_before"
                    android:layout_marginTop="20dp"
                    android:scaleType="center"
                    android:src="@drawable/line"/>



            <ImageButton
                    android:id="@+id/add_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/addnewfashion"
                    android:layout_marginTop="15dp"
                    android:background="#00000000"
                    android:layout_below="@+id/line2"
                    tools:layout_editor_absoluteX="34dp"
                    tools:layout_editor_absoluteY="321dp"/>


            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_below="@+id/add_button" android:layout_marginTop="30dp"
                    tools:layout_editor_absoluteX="400dp"
                    tools:layout_editor_absoluteY="600dp"
                    tools:src="@tools:sample/avatars[12]"/>

            <TextView
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/imageView"
                    android:text="a"
            />

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
